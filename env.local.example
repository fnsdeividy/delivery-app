# ===== CONFIGURAÇÕES OBRIGATÓRIAS =====

# Banco de Dados PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/delivery_app?schema=public"

# Autenticação NextAuth
NEXTAUTH_SECRET="sabor-express-secret-key-2024"
NEXTAUTH_URL="http://localhost:3000"

# ===== CONFIGURAÇÕES OPCIONAIS =====

# Configurações da API
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Configurações de Pagamento (Stripe)
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Configurações de Email (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="seu-email@gmail.com"
SMTP_PASS="sua-senha-de-app"

# Configurações de Upload (Cloudinary)
CLOUDINARY_CLOUD_NAME="seu-cloud-name"
CLOUDINARY_API_KEY="sua-api-key"
CLOUDINARY_API_SECRET="seu-api-secret"

# Configurações de Geocoding (Google Maps)
GOOGLE_MAPS_API_KEY="sua-google-maps-api-key"

# Configurações da Aplicação
NEXT_PUBLIC_APP_NAME="Cardap.IO"
NEXT_PUBLIC_APP_DESCRIPTION="Plataforma de delivery de comida"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ===== CONFIGURAÇÕES DE DESENVOLVIMENTO =====

# Modo de desenvolvimento
NODE_ENV="development"

# Logs do Prisma
PRISMA_LOG_LEVEL="info" 

# Cache Redis (opcional, recomendado para busca)
REDIS_URL="redis://localhost:6379"